  $_git_bin push
  _debug printf "%s push\n" "$_git_bin"
}

# ----------------------------------------------------------- update_submodules

desc update_submodules <<EOM
Usage:
  $_me update_submodules

Description:
  Update git submodules. An alias for the git command:
    git submodule foreach git pull
EOM
update_submodules() {
  cd "$DOTSPATH"
  $_git_bin submodule foreach git pull
}

